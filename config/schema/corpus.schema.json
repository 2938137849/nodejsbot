{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "语言库自动回复",
  "description": "一个语言库",
  "definitions": {
    "regexp": {
      "type": "string",
      "description": "正则匹配,注入语言选择:JSRegexp",
      "default": "",
      "format": "regex"
    },
    "MSG": {
      "type": "string",
      "description": "字符串格式消息段",
      "pattern": "^(\\[(CQ:\\w+|FN:\\w+\\.\\w+)\\]|[^\\[]+)+$",
      "default": null
    },
    "CQ": {
      "type": "string",
      "description": "字符串格式消息段",
      "pattern": "^(\\[CQ:\\w+(,\\w+=[^,\\]]+)+\\]|[^\\[]+)+$",
      "default": null
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "groupMSG": {
      "description": "群消息",
      "type": "array",
      "items": {
        "properties": {
          "regexp": {
            "$ref": "#/definitions/regexp"
          },
          "reply": {
            "$ref": "#/definitions/MSG",
            "default": ""
          },
          "forward": {
            "type": "boolean",
            "description": "是否为合并转发消息",
            "default": true
          },
          "needAdmin": {
            "type": "boolean",
            "default": true
          },
          "isOpen": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["regexp"]
      }
    },
    "privateMSG": {
      "description": "私聊消息",
      "type": "array",
      "items": {
        "properties": {
          "regexp": {
            "$ref": "#/definitions/regexp"
          },
          "reply": {
            "$ref": "#/definitions/MSG",
            "default": ""
          },
          "needAdmin": {
            "type": "boolean",
            "default": true
          },
          "isOpen": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["regexp"]
      }
    },
    "pokeGroup": {
      "description": "群聊戳一戳消息",
      "type": "array",
      "items": {
        "$ref": "#/definitions/CQ"
      }
    }
  },
  "required": [],
  "additionalProperties": false
}