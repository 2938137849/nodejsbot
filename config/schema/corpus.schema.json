{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "语言库自动回复",
  "description": "一个语言库",
  "definitions": {
    "regexp": {
      "type": "string",
      "description": "正则匹配,注入语言选择:JSRegexp",
      "default": "",
      "format": "regex"
    },
    "MSG": {
      "type": "string",
      "description": "字符串格式消息段",
      "pattern": "^(\\[(CQ:\\w+|FN:\\w+\\.\\w+)\\]|[^\\[]+)+$",
      "default": null
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "group": {
      "description": "群消息",
      "type": "array",
      "items": {
        "properties": {
          "regexp": {
            "$ref": "#/definitions/regexp"
          },
          "reply": {
            "type": "array",
            "description": "如果 forward 字段未设置为 true, 则只有数组第一位有效",
            "items": {
              "$ref": "#/definitions/MSG"
            }
          },
          "forward": {
            "type": "boolean",
            "description": "是否为合并转发消息",
            "default": false
          }
        },
        "required": ["regexp"]
      }
    },
    "private": {
      "description": "私聊消息",
      "type": "array",
      "items": {
        "properties": {
          "regexp": {
            "$ref": "#/definitions/regexp"
          },
          "reply": {
            "$ref": "#/definitions/MSG"
          }
        },
        "required": ["regexp"]
      }
    }
  },
  "required": [],
  "additionalProperties": false
}