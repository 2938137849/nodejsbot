{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "语言库自动回复",
  "description": "一个语言库",
  "definitions": {
    "corpusItem": {
      "type": "object",
      "properties": {
        "regexp": {
          "type": "string",
          "description": "正则匹配,注入语言选择:JSRegexp",
          "default": "",
          "format": "regex"
        },
        "reply": {
          "type": "string",
          "default": "",
          "pattern": "^(\\[CQ:\\w+\\]|[^\\[]+)+$"
        }
      },
      "required": ["regexp", "reply"]
    },
    "replyItem": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "default": "text",
          "enum": ["text"]
        },
        "data": {
          "type": "object",
          "properties": {
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "group": {
      "description": "群消息",
      "type": "array",
      "items": {
        "$ref": "#/definitions/corpusItem"
      }
    },
    "forward": {
      "description": "群消息-合并转发",
      "type": "array"
    }
  },
  "required": [
    "group"
  ]
}